<h1 class="text-sky-500 font-bold text-xl p-4">Articles</h1>
<div class="flex justify-end font-bold max-w-lg"><a href="/articles/new" class="bg-sky-500 px-4 py-2  hover:ring-2 hover:ring-sky-500 hover:bg-slate-900">New Article</a></div>
<div class="">
    <div class="max-w-lg mt-3">
        <% @articles.each do |article| %>
            <div class="flex items-center group w-full">
                <a class="flex-grow block w-full p-2 bg-slate-700/50 hover:bg-slate-900 hover:ring " href="<%= article_path(article) %>"><%= article.title %></a>
                <form action="<%= article_path(article) %>" method="delete">
                    <input type="submit" value="X" class="font-bold bg-red-800 py-2 px-3  hover:ring-1 hover:ring-red-800 hover:bg-slate-900 hover:text-red-800 " />
                </form>
            </div>
        <% end %>
    </div>
</div>